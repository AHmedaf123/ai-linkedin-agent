# AI LinkedIn Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# OpenRouter API (Required for LLM content generation)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemma-3-12b-it:free

# GitHub Integration (Optional - for repo posts and activity signals)
GITHUB_USERNAME=your_github_username
GH_API_TOKEN=your_github_token_here
# Alternative: GITHUB_TOKEN=your_github_token_here

# LinkedIn Automation (Optional - required only for posting)
# Use either email/password OR user/pass combination
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password
# Alternative:
# LINKEDIN_USER=your_linkedin_email@example.com
# LINKEDIN_PASS=your_linkedin_password

# Email Reporting (Optional - for automated email reports)
# Use either sender/password OR user/pass combination
EMAIL_SENDER=your_email@example.com
EMAIL_PASSWORD=your_email_password
# Alternative:
# EMAIL_USER=your_email@example.com
# EMAIL_PASS=your_email_password

# Provider-agnostic SMTP (recommended for reliability)
# Example: SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURITY=starttls  # starttls | ssl | none
SMTP_USER=apikey        # SendGrid uses 'apikey' literal as username
SMTP_PASS=your_sendgrid_api_key

# Email recipient(s) - comma-separated allowed
EMAIL_RECEIVER=recipient@example.com
# Alternative: EMAIL_TO=recipient@example.com

# Application Settings (Optional - with recommended values for high quality)
ENABLE_POST=true
MIN_SEO_SCORE=80
MAX_LOW_SEO_ATTEMPTS=3
MAX_REGENERATION_ATTEMPTS=5

# Logging Configuration (Optional)
LOG_LEVEL_CONSOLE=INFO
LOG_LEVEL_FILE=DEBUG
LOG_FORMAT_JSON=false